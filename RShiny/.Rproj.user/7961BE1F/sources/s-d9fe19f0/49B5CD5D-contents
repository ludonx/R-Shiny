          ),
          fluidRow(
            div(class = "span1",
                uiOutput("obs")
            )
          ),
          
          if (failed)
            div(tags$b("Invalid name of data object", style = "color: red;")),
          
          footer = tagList(
            actionButton("Cancel","Cancel"),
