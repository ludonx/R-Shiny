  #####This block is to compute plots if necessary and when Results's tab is active
  observe({
    envGlobal$path
    #pathReact()
    
    if(input$navbarPageID=='Connexion')
    {
      dataModal <- function(failed = FALSE) {
        modalDialog(
          div(
